version: "2"

# Note, change in nginx.conf too
<% @Count = 4 %>

services:

  redis:
    image: redis
    command: redis-server --appendonly yes

  nginx:
    image: nginx
    ports:
      - 8080:80
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
    depends_on:
    <% for @n in 1..@Count %>
      - phoenix-<%= @n %><% end %>

<% for @n in 1..@Count %>
  phoenix-<%= @n %>:
    image: bitwalker/alpine-elixir-phoenix:latest
    volumes:
      - .:/opt/app
    environment:
      PORT: 4000
      REDIS_HOST: 'redis'
    depends_on:
      - redis
    working_dir: /opt/app
    command: mix phx.server
<% end %>
